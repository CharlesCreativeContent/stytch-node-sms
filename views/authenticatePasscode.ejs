<!DOCTYPE html>
<html lang="en">
<head>
  <title>Hello Socks | Stytch example</title>
  <link rel="stylesheet" type="text/css" href="/css/styles.css">
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans&family=Gloria+Hallelujah&display=swap"
    rel="stylesheet">
</head>
<body>
  <div class="app">
    <div class="nav">
      <div class="logo">
        <h1><a href="/">Tropica</a></h1>
        <span class="navItem sublogo">Hawaiian Pizza & Lemonade</span>
      </div>
      <div class="navMenu">
        <span class="navItem">About</span>
        <span class="navItem">Menu</span>
        <span class="navItem">Order</span>
      </div>
    </div>
    <div class="content">
      <div class="card">
        <div class="cardContent">
          <h1 class="contentHeader">The passcode is...pizza!</h1>
          <p class="instructions">Just kidding. Check your phone for the 6-digit passcode.</p>
          <form action="/authenticate" method=POST>
            <div class="actions">
              <div>
                <!-- Used to pass req.body variables -->
                <input type="hidden" name="phoneId" value="<%= phoneId %>" />
                <input type="hidden" name="phoneNumber" value="<%= phoneNumber %>" />
                <input type="hidden" name="intlCode" value="<%= intlCode %>" />

                <input autofocus class="passcodeInput" type=text placeholder="0" size="1" maxlength="1"
                  name="digit-1" />
                <input class="passcodeInput" type=text placeholder="0" size="1" maxlength="1" name="digit-2" />
                <input class="passcodeInput" type=text placeholder="0" size="1" maxlength="1" name="digit-3" />
                <input class="passcodeInput" type=text placeholder="0" size="1" maxlength="1" name="digit-4" />
                <input class="passcodeInput" type=text placeholder="0" size="1" maxlength="1" name="digit-5" />
                <input class="passcodeInput" type=text placeholder="0" size="1" maxlength="1" name="digit-6" />
              </div>
              <input class="button" id="button" type="submit" onclick="submitPhoneNumber()" value="I'M FEELING LUCKY" />
            </div>
          </form>
          <div class="resend" onclick="resendCode()">Resend code</div>
        </div>
      </div>
    </div>
  </div>
  <script>
    function isValidPasscodeDigit(digitValue) {
      const regex = /^[0-9]$/g;
      if (digitValue.match(regex)) {
        return true;
      }
      return false;
    }

    function isValidPasscode() {
      const passcodeInputs = document.getElementsByClassName('passcodeInput');
      const regex = /^[0-9]$/g;
      for (i = 0; i < passcodeInputs.length; i++) {
        if (!isValidPasscodeDigit(passcodeInputs[i].value)) {
          return false;
        }
      }
      return true;
    }

    // Handles auto tabbing to next passcode digit input.
    // Logic from https://stackoverflow.com/questions/15595652/focus-next-input-once-reaching-maxlength-value.
    function autoTab(target) {
      if (target.value.length >= target.maxLength) {
        var next = target;
        while (next = next.nextElementSibling) {
          if (next == null)
            break;
          if (next.tagName.toLowerCase() === "input") {
            next.focus();
            break;
          }
        }
      }
      // Move to previous field if empty (user pressed backspace)
      else if (target.value.length === 0) {
        var previous = target;
        while (previous = previous.previousElementSibling) {
          if (previous == null)
            break;
          if (previous.tagName.toLowerCase() === "input") {
            previous.focus();
            break;
          }
        }
      }
    }

    function onPasscodeDigitEnter(e) {
      if (isValidPasscodeDigit(e.target.value) || e.target.value === '') {
        autoTab(e.target);
      }

      // Update styling once passcode is valid.
      const inputs = document.getElementsByTagName('input');
      const button = document.getElementById('button')
      if (!isValidPasscode()) {
        for (i = 0; i < inputs.length; i++) {
          inputs[i].style.borderColor = '#ADBCC5';
          button.disabled = true;
        }
      } else {
        for (i = 0; i < inputs.length; i++) {
          inputs[i].style.borderColor = '#19303D';
          button.disabled = false;
        }
      }
    }

    function resendCode() {
      const data = { intlCode: "<%= intlCode %>", phoneNumber: "<%= phoneNumber %>" };
      fetch("/login_or_create_user", {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data),
      });
    }

    document.getElementById('button').disabled = true;
    const hasErrored = "<%= hasErrored %>";
    const passcodeInputs = document.getElementsByClassName('passcodeInput');
    for (i = 0; i < passcodeInputs.length; i++) {
      passcodeInputs[i].addEventListener('keyup', onPasscodeDigitEnter);
      if (hasErrored === 'true') {
        passcodeInputs[i].style.borderColor = 'red';
      } else {
        passcodeInputs[i].style.borderColor = '#ADBCC5';
      }
    }
  </script>
</body>
</html>
